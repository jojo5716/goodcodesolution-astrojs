---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="¡Conectemos!" />

  <ContactUs
    id="form"
    title="Contacto"
    subtitle="¿Listo para comenzar tu próximo proyecto tecnológico? Ponte en contacto con nosotros hoy mismo para discutir tus necesidades y cómo GoodCode puede ayudarte a alcanzar tus objetivos."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario de contacto, usted reconoce y acepta la recopilación de su información personal.',
    }}
    description="Nuestro equipo de soporte normalmente responde dentro de las 24 horas hábiles.."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'Phone',
        description: '+(34) 613 674 765',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'info@goodcodesolution.com',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
